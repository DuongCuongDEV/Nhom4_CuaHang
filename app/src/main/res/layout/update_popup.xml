<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ThemSanPham">


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Cập nhật sản phẩm"
    android:gravity="center"
    android:textSize="25dp"
    android:textColor="@color/white"
    android:background="#00ACFB"

    />

    <EditText
        android:id="@+id/txtNameUp"
        android:layout_width="302dp"
        android:height="50dp"
        android:layout_marginTop="30dp"
        android:hint="Tên sản phẩm"
        android:background="@drawable/update_bckg"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/txtGiaCuUp"
        android:layout_width="302dp"
        android:background="@drawable/update_bckg"
        android:height="50dp"
        android:layout_marginTop="15dp"

        android:hint="Giảm giá"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/txtGiaMoiUp"
        android:layout_width="302dp"
        android:background="@drawable/update_bckg"
        android:height="50dp"
        android:layout_marginTop="15dp"

        android:hint="Giá tiền"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/txtMoTaUp"
        android:layout_width="302dp"
        android:background="@drawable/update_bckg"
        android:height="100dp"
        android:layout_marginTop="15dp"

        android:hint="Mô tả"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:hint="Loại"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/txtLoaiUp"
        android:layout_width="302dp"
        android:height="50dp"

        android:hint="Tên loại"
        android:layout_marginTop="10dp"
        android:background="@drawable/update_bckg"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btUP"
        android:layout_width="184dp"
        android:layout_gravity="center"

        android:layout_height="60dp"
        android:text="Cập nhật"
        android:backgroundTint="#03A9F4"
        android:layout_marginTop="20dp"
        />



</LinearLayout>