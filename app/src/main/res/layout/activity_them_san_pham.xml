<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ThemSanPham">


    <ImageButton
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="230dp" />


    <EditText
        android:id="@+id/txtName"
        android:layout_width="302dp"
        android:hint="Tên sản phẩm"
        android:height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/update_bckg"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/txtGiaCu"
        android:layout_width="302dp"
        android:hint="Giảm giá"
        android:height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/update_bckg"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/txtGiaMoi"
        android:layout_width="302dp"
        android:height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/update_bckg"
        android:hint="Giá tiền"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/txtMoTa"
        android:layout_width="302dp"
        android:hint="Mô tả"
        android:height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/update_bckg"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:hint="Loại"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/auto_complete_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/txtLoai"
        android:layout_width="302dp"
        android:visibility="gone"
        android:hint="Tên loại"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnupload"
            android:layout_width="184dp"
            android:layout_gravity="center"

            android:layout_height="60dp"
            android:text="Đăng sản phẩm"
            android:backgroundTint="#03A9F4"
            android:layout_marginTop="20dp"
            />



</LinearLayout>