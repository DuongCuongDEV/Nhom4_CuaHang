<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:id="@+id/rl_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_hitory_product_text_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Mã Đặt Hàng :"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_madathang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_hitory_product_text_order"
            android:text="12341aaa"
            android:textColor="@color/teal_200"
            android:textSize="10sp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_madathang"
            android:layout_marginTop="5dp"
            android:background="#E1E1E1"/>

        <ImageView
            android:id="@+id/img_anhls"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/divider"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_phone_24"/>

        <TextView
            android:id="@+id/tv_tenspls"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_anhls"
            android:text="Iphone 12"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_gials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tenspls"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_anhls"
            android:text="20.000.000 VND"
            android:textColor="#FF0000"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_soluong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gials"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_anhls"
            android:text="Số Lượng:"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_soluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gials"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_soluong1"
            android:text="1"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_trangthai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/tv_tenspls"
            android:gravity="right"
            android:text="Đang Chờ Xác Nhận"
            android:textColor="@color/teal_700"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_soluong"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_anhls"
            android:text="Ngày Đặt: "
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_ngay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_soluong1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_ngay"
            android:text="null"
            android:textSize="10sp"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_ngay1"
            android:layout_marginTop="5dp"
            android:background="#E1E1E1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view">

            <Button
                android:textSize="15dp"
                android:id="@+id/btn_huy"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:backgroundTint="#FF0000"
                android:text="Hủy" />

            <Button
                android:textSize="15dp"
                android:id="@+id/btn_vanchuyen"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/view"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#FF0000"
                android:text="Đang Vân Chuyển" />

            <Button
                android:id="@+id/btn_danhan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/view"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#FF0000"
                android:text="Đã Nhận" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>